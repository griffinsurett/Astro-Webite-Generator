---
const { text, href = null, type = "button", onClick = null, className = "" } = Astro.props;
---
{href ? (
  <a
    href={href}
    role="button"
    class={`inline-block px-4 py-2 border border-gray-300 bg-gray-f0 rounded cursor-pointer text-center no-underline transition-colors duration-200 text-gray-333 text-base hover:bg-gray-e0 hover:border-gray-999 ${className}`}
  >
    {text}
  </a>
) : (
  <!-- @ts-ignore -->
  <button
    type={type}
    on:click={onClick}
    class={`inline-block px-4 py-2 border border-gray-300 bg-gray-f0 rounded cursor-pointer text-center no-underline transition-colors duration-200 text-gray-333 text-base hover:bg-gray-e0 hover:border-gray-999 ${className}`}
  >
    {text}
  </button>
)}

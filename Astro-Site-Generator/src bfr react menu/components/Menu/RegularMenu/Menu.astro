---
import ItemsTemplate from "../../ItemsTemplate.astro";
import MenuItem from "../MenuLink.astro";

const { queryName, className = "" } = Astro.props;
const currentPath = Astro.url.pathname;
---
<nav class={`menu ${className}`}>
  <ul class="nav-links">
    <ItemsTemplate
      ItemComponent={MenuItem}
      queryName={queryName}
      className="nav-links"
      columns={null}
      gap="0"
      currentPath={currentPath}
    />
  </ul>
</nav>

<style>
  .menu {
    /* Minimal wrapper styles */
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  /* Remove excess styling from links */
  .nav-links a.menu-item {
    text-decoration: none;
    color: #333; /* Neutral text color */
    padding: 0.5rem 1rem;
    transition: background-color 0.2s ease;
  }

  /* Simplified hover effect */
  .nav-links a.menu-item:hover {
    background-color: #eaeaea; /* Light gray on hover */
  }

  /* Active link styling */
  .nav-links a.menu-item.active {
    font-weight: bold;
    border-bottom: 2px solid #333; /* Underline to indicate active */
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .nav-links {
      flex-direction: column;
      width: 100%;
    }

    .nav-links a.menu-item {
      width: 100%;
      padding: 0.75rem 0;
    }
  }
</style>

---
/**
 * MenuItem.astro
 *
 * Props:
 * - label: The display text for the menu item.
 * - href: The URL the menu item links to.
 * - external: (Optional) Boolean indicating if the link is external. Defaults to false.
 * - className: (Optional) Additional CSS classes for styling.
 * - currentPath: (Optional) The current URL path to determine active link.
 */
 const { label, href, external = false, className = "", currentPath = "" } = Astro.props;

// Determine if the link is active
const isActive = href === currentPath;
---
{external ? (
  <a href={href} target="_blank" rel="noopener noreferrer" class={`menu-item ${className}`}>
    {label}
  </a>
) : (
  <a href={href} class={`menu-item ${className} ${isActive ? 'active' : ''}`}>
    {label}
  </a>
)}
<style>
  .menu-item {
    display: inline-block; /* Prevent stretching */
    text-decoration: none;
    color: #333;
    padding: 0.5rem 1rem;
    transition: color 0.2s ease;
  }

  .menu-item:hover {
    color: #007acc;
  }

  .menu-item.active {
    font-weight: bold;
    color: #007acc;
    border-bottom: 2px solid #007acc;
  }
</style>

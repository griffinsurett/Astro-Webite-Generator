---
/**
 * MenuItem.astro
 *
 * Renders an individual menu item.
 *
 * Props:
 * - label: The display text for the menu item.
 * - href: The URL the menu item links to.
 * - external: (Optional) Boolean indicating if the link is external. Defaults to false.
 * - className: (Optional) Additional CSS classes for styling.
 * - currentPath: (Optional) The current URL path to determine the active link.
 */
 const { label, href, external = false, className = "", currentPath = "" } = Astro.props;

// Determine if the link is active
const isActive = href === currentPath;
---
{external ? (
  <a href={href} target="_blank" rel="noopener noreferrer" class={`menu-item ${className}`} aria-label={label}>
    {label}
  </a>
) : (
  <a href={href} class={`menu-item ${className} ${isActive ? 'active' : ''}`} aria-current={isActive ? 'page' : undefined}>
    {label}
  </a>
)}
<style>
  .menu-item {
    display: inline-block;
    text-decoration: none;
    color: #333;
    padding: 0.5rem 1rem;
    transition: color 0.2s ease, background-color 0.2s ease;
    border-radius: 4px;
  }

  .menu-item:hover {
    background-color: #f0f0f0;
  }

  .menu-item.active {
    font-weight: bold;
    background-color: #e0e0e0;
  }
</style>

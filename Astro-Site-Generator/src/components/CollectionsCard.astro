---
/* src/components/CollectionCard.astro */
const { title, description, slug, icon, featuredImage, collection } = Astro.props;
---
<article class="collection-card">
  <h2>
    {icon || 'ðŸ“„'}
    <a href={`/${collection}/${slug}`}>{title}</a>
  </h2>
  
  <!-- {featuredImage && ( -->
    <img src={featuredImage} alt={`${title} Featured Image`} class="collection-image" loading="lazy" />
  <!-- )} -->
  
  <p>{description}</p>
</article>

<style>
  .collection-card {
    border: 1px solid #eaeaea;
    padding: 1rem;
    border-radius: 8px;
    transition: box-shadow 0.2s;
  }
  .collection-card:hover {
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
  }
  .collection-card h2 {
    margin-bottom: 0.5rem;
  }
  .collection-card a {
    text-decoration: none;
    color: inherit;
  }
  .collection-card img.collection-image {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin-bottom: 1rem;
  }
</style>

---
import Layout from '../layouts/Layout.astro';

const pageTitle = "404 - Page Not Found";
const pageDescription = "Oops! The page you're looking for doesn't exist.";
const featuredImage = "/assets/404-banner.jpg"; // Example image
const crawl = false; // 404 pages should generally not be crawled
---
<Layout
  title={pageTitle}
  description={pageDescription}
  image={featuredImage}
  ogType="website"
  crawl={crawl} 
>
  <main class="h-[80vh] flex flex-col items-center justify-center text-center bg-gray-f9 p-5">
    <h1 class="text-3xl mb-5 text-gray-333">404 - Page Not Found</h1>
    <p class="text-lg text-gray-666 mb-8">Oops! The page you're looking for doesn't exist.</p>
    <a
      href="/"
      class="inline-block px-5 py-2 bg-blue-007acc text-white no-underline rounded hover:bg-blue-005fa3 transition-colors duration-300"
    >
      Go Back Home
    </a>
  </main>
</Layout>

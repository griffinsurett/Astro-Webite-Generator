---
// layout import
import Layout from '../layouts/Layout.astro';

// component imports
import Button from '../components/Button.astro';
import Image from '../components/Image.astro';
import Section from '../components/Section.astro';
import ContentTemplate from '../components/ContentTemplate.astro';
import ItemsTemplate from '../components/ItemsTemplate.astro';
import CollectionCard from '../components/CollectionsCard.astro';
import ServiceCard from '../components/ServiceCard.astro';

// utility imports
import { fetchFeaturedItems } from '../utils/collections.js';
---
<Layout title="Home Page" description="Welcome to our Astro-powered website.">
  
  <!-- Welcome Section -->
  <Section>
    <h1>Welcome to Our Website</h1>
    <p>Your go-to platform for services and projects.</p>
    <Button text="Explore Services" href="/services" className="primary-button" />
  </Section>
  
  <!-- Featured Services Section -->
  <Section>
    <ContentTemplate 
      collection="services" 
      viewAllHref="/services" 
      viewAllText="View All Services"
    >
      <h2>Featured Services</h2>
      <ItemsTemplate
        collection="services"
        ItemComponent={ServiceCard}
        query={fetchFeaturedItems}
        columns={3}
        gap="1rem"
      />
    </ContentTemplate>
  </Section>
  
  <!-- Featured Projects Section -->
  <Section>
    <ContentTemplate 
      collection="projects" 
      viewAllHref="/projects" 
      viewAllText="View All Projects"
    >
      <h2>Featured Projects</h2>
      <ItemsTemplate
        collection="projects"
        ItemComponent={CollectionCard}
        query={fetchFeaturedItems}
        columns={3}
        gap="1.5rem"
      />
    </ContentTemplate>
  </Section>
  
  <!-- Highlight Section -->
  <Section className="highlight-section">
    <Image src="/assets/astro.svg" alt="Astro Logo" className="hero-image" />
    <p>Experience seamless performance with Astro!</p>
  </Section>
</Layout>

<style>
  .highlight-section {
    text-align: center;
    padding: 3rem 0;
  }
</style>

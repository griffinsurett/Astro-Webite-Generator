---
// Layout.astro

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// content Import
import siteConfig from '../content/site.config.js'; // for things like siteConfig.title or siteConfig.logo

// Destructure title and description from props, falling back to siteConfig
const { title, description } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={siteConfig.favicon} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={siteConfig.logo} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={siteConfig.logo} />
  </head>
  <body>
    <!-- Just pass minimal props to Header, if you still want the siteTitle/logo from siteConfig -->
    <Header 
      siteTitle={siteConfig.title} 
      logo={siteConfig.logo} 
    />
    <main>
      <slot />
    </main>
    <!-- No more text/links from siteConfig.footer -->
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    color: #333;
  }
  main {
    padding: 2rem;
    min-height: 80vh;
  }
</style>

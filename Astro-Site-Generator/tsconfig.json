{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": false,               // Disable all strict type-checking options
    "noImplicitAny": false,        // Allow variables to have an 'any' type implicitly
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

---
// You can import components or styles here if needed
import Layout from '../layouts/Layout.astro'; // Adjust the path based on your project structure
---

<Layout>
  <main class="not-found">
    <h1>404 - Page Not Found</h1>
    <p>Oops! The page you're looking for doesn't exist.</p>
    <a href="/" class="home-link">Go Back Home</a>
  </main>

  <style>
    .not-found {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 80vh;
      text-align: center;
      background-color: #f9f9f9;
      padding: 20px;
    }

    .not-found h1 {
      font-size: 3rem;
      margin-bottom: 20px;
      color: #333;
    }

    .not-found p {
      font-size: 1.2rem;
      margin-bottom: 30px;
      color: #666;
    }

    .home-link {
      padding: 10px 20px;
      background-color: #007acc;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .home-link:hover {
      background-color: #005fa3;
    }
  </style>
</Layout>
